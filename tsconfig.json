{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["reflect-metadata", "node"],
    "useDefineForClassFields": false,
    "jsx": "react-jsx"
  },
  "exclude": [
    "./dist",
    "./src/ui"
  ]
}
